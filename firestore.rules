rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is educator or admin
    function isEducatorOrAdmin() {
      return request.auth != null && getUserRole() in ['educator', 'admin'];
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // === USER MANAGEMENT ===
    // Users can read/write their own document
    // Admins can read/write any user document
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
      
      // Allow creation of new user documents on signup
      allow create: if request.auth.uid == userId;
    }

    // === WATER QUALITY DATA ===
    // All authenticated users can create water quality entries
    // Students can only read their own entries
    // Educators and admins can read all entries
    match /waterQuality/{entryId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isEducatorOrAdmin()
      );
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isEducatorOrAdmin()
      );
      allow delete: if isEducatorOrAdmin();
    }

    // === SENSOR DATA (EXCEL UPLOADS) ===
    // Only admins can upload sensor data
    // All authenticated users can read sensor data
    match /sensorData/{dataId} {
      allow create: if isAdmin();
      allow read: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // === SENSOR UPLOADS TRACKING ===
    // Only admins can create upload records
    // All authenticated users can read upload history
    match /sensorUploads/{uploadId} {
      allow create: if isAdmin();
      allow read: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // === WEATHER DATA ===
    // All authenticated users can read weather data
    // Only educators and admins can create/update weather data
    match /weatherData/{dataId} {
      allow read: if isAuthenticated();
      allow create, update: if isEducatorOrAdmin();
      allow delete: if isAdmin();
    }

    // === ANALYTICS DATA ===
    // Only educators and admins can access analytics
    match /analytics/{analyticsId} {
      allow read, write: if isEducatorOrAdmin();
    }

    // === SYSTEM SETTINGS ===
    // Only admins can access system settings
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }

    // === NOTIFICATIONS/ALERTS ===
    // Users can read their own notifications
    // Educators and admins can read all notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isEducatorOrAdmin()
      );
      allow create: if isEducatorOrAdmin();
      allow update, delete: if isAdmin();
    }

    // === ADMIN LOGS ===
    // Only admins can access admin logs
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // === DEFAULT DENY ===
    // Deny all other requests by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 